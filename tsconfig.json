{
    "compilerOptions": {
      "outDir": "./build",
      "allowJs": true,
      "target": "esnext",
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,

      "allowUnreachableCode": false,
      "strict": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitReturns": true,

      "baseUrl": "src",
      "paths": { 
          "/*": ["./*"] 
        },

      "plugins": [
        {
          "transform": "@zerollup/ts-transform-paths",
        }
      ]
    },
    "include": ["./src/**/*"]
  }