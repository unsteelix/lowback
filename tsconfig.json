{
    "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "module": "es6",
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,

      "allowUnreachableCode": false,
      "strict": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitReturns": true,

      "baseUrl": "src",
    },
    "include": ["./src/**/*"]
  }